<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.philoxapp.initialScreens.LandingPageController"
           style="-fx-background-color: linear-gradient(to bottom right, #f7f9fc, #e6ebf5);"
           alignment="CENTER">

    <BorderPane prefWidth="1200" prefHeight="800"
                style="-fx-background-color: linear-gradient(to bottom right, #f7f9fc, #e6ebf5);">

        <!-- HEADER -->
        <top>
            <HBox spacing="15" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-padding: 15 30; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
                <ImageView fx:id="logoImage" fitHeight="30" fitWidth="30" />
                <Label text="Philox" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #274C56;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="loginButton" text="Login" onAction="#handleLoginRedirect"
                        style="-fx-background-color: transparent;
                               -fx-border-color: #274C56;
                               -fx-text-fill: #274C56;
                               -fx-border-radius: 6;
                               -fx-font-weight: bold;
                               -fx-font-size: 14px;
                               -fx-padding: 8 24;" />
            </HBox>
        </top>

        <!-- MAIN CONTENT -->
        <center>
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <HBox spacing="60" alignment="CENTER" style="-fx-padding: 40 60 20 60;">
                    <!-- LEFT TEXT SECTION -->
                    <VBox spacing="20" alignment="CENTER_LEFT" maxWidth="500">
                        <VBox spacing="4">
                            <Label text="A Community for"
                                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #274C56;" />
                            <Label text="Changemakers"
                                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #274C56;" />
                        </VBox>

                        <Label text="Philox is a national volunteering and community service platform that bridges the gap between passionate citizens and trusted social welfare organizations. Whether youâ€™re an individual eager to make a difference or an organization looking to amplify your impact, Philox makes it simple to connect, collaborate, and contribute toward meaningful causes."
                               wrapText="true"
                               style="-fx-font-size: 16px; -fx-text-fill: #444;" />

                        <HBox spacing="15">
                            <Button fx:id="joinVolunteerButton" text="Join as Volunteer" onAction="#handleVolunteerSignup"
                                    style="-fx-background-color: #4CAF50;
                                           -fx-text-fill: white;
                                           -fx-background-radius: 8;
                                           -fx-font-weight: bold;
                                           -fx-font-size: 14px;
                                           -fx-padding: 10 20;" />
                            <Button fx:id="joinOrgButton" text="Join as Organisation" onAction="#handleOrgSignup"
                                    style="-fx-background-color: transparent;
                                           -fx-border-color: #274C56;
                                           -fx-text-fill: #274C56;
                                           -fx-border-radius: 6;
                                           -fx-font-weight: bold;
                                           -fx-font-size: 14px;
                                           -fx-padding: 8 24;" />
                        </HBox>
                    </VBox>

                    <!-- RIGHT IMAGE SECTION WITH OVERLAY -->
                    <StackPane alignment="BOTTOM_LEFT">
                        <ImageView fx:id="volunteerImage" fitWidth="650" preserveRatio="true"
                                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 12, 0.3, 0, 4);
                                          -fx-background-radius: 20;
                                          -fx-border-radius: 20;" />

                        <VBox alignment="CENTER" maxWidth="240" maxHeight="80"
                              StackPane.alignment="BOTTOM_LEFT"
                              style="-fx-background-color: #FFEB3B;
                                     -fx-padding: 20 24;
                                     -fx-background-radius: 12;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.3, 0, 3);">
                            <Label text="Start Making a"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                            <Label text="Difference Today"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                            <StackPane.margin>
                                <Insets bottom="-25" left="-25"/>
                            </StackPane.margin>
                        </VBox>
                    </StackPane>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</StackPane>