<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.philoxapp.organisationSignup.OrganisationSignupController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #f7f9fc, #e6ebf5);">

    <!-- HEADER -->
    <top>
        <VBox>
            <!-- Header bar -->
            <HBox spacing="15" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-padding: 15 30; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
                <ImageView fx:id="logoImage" fitHeight="30" fitWidth="30" />
                <Label text="Philox" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #274C56;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="loginButton" text="Signup" onAction="#handleLoginRedirect"
                        style="-fx-background-color: transparent;
                               -fx-border-color: #274C56;
                               -fx-text-fill: #274C56;
                               -fx-border-radius: 6;
                               -fx-font-weight: bold;
                               -fx-font-size: 14px;
                               -fx-padding: 8 24;" />
            </HBox>

            <!-- Back button row (just below header bar) -->
            <HBox alignment="TOP_LEFT" style="-fx-padding: 5 20 0 20;">
                <Button fx:id="backButton" onAction="#handleBackClick"
                        maxWidth="10" maxHeight="10"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="backImage" fitWidth="32" fitHeight="32" pickOnBounds="true" preserveRatio="true"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>


    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true"
                    pannable="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox alignment="TOP_CENTER" spacing="25">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <!-- TITLE & STEPS (outside box) -->
                <VBox alignment="CENTER" spacing="8">
                    <Label text="Organization Details"
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #274C56;" />
                    <Label text="Add your organization's information to get started."
                           style="-fx-font-size: 14px; -fx-text-fill: #4A5565;" />

                    <!-- Step Indicator -->
                    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15 0;">
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="16" style="-fx-fill: #009689;"/>
                                <Text text="1" style="-fx-fill: white; -fx-font-weight: bold;"/>
                            </StackPane>
                            <Label text="Basic Information" style="-fx-font-weight: bold; -fx-text-fill: #274C56;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" maxWidth="100" minWidth="50" style="-fx-background-color: #ddd; -fx-max-height: 2;"/>
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="16" style="-fx-fill: #ddd;"/>
                                <Text text="2" style="-fx-fill: #888; -fx-font-weight: bold;"/>
                            </StackPane>
                            <Label text="Online Presence" style="-fx-text-fill: #888;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" maxWidth="100" minWidth="50" style="-fx-background-color: #ddd; -fx-max-height: 2;"/>
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="16" style="-fx-fill: #ddd;"/>
                                <Text text="3" style="-fx-fill: #888; -fx-font-weight: bold;"/>
                            </StackPane>
                            <Label text="Verification &amp; Proofs" style="-fx-text-fill: #888;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- WHITE BOX -->
                <VBox spacing="20" alignment="TOP_CENTER" maxWidth="700"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 30;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0.3, 0, 4);">

                    <!-- Form Fields -->
                    <VBox spacing="16">
                        <!-- Row 1 -->
                        <HBox spacing="20">
                            <VBox spacing="4" prefWidth="300">
                                <Label text="Organization Name *" style="-fx-font-weight: bold; -fx-text-fill: #0A0A0A" />
                                <TextField fx:id="nameField" promptText="Enter organization's full name"
                                           style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            </VBox>
                            <VBox spacing="4" prefWidth="300">
                                <Label text="Official Email *" style="-fx-font-weight: bold; -fx-text-fill: #0A0A0A" />
                                <TextField fx:id="emailField" promptText="official.email@organization.com" onKeyReleased="#validateEmail"
                                           style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                                <Label fx:id="emailErrorLabel" text="" visible="false" managed="false"
                                       style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                            </VBox>
                        </HBox>

                        <!-- Row 2 -->
                        <HBox spacing="20">
                            <VBox spacing="4" prefWidth="300">
                                <Label text="Location *" style="-fx-font-weight: bold; -fx-text-fill: #0A0A0A" />
                                <TextField fx:id="locationField" promptText="City, Country"
                                           style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            </VBox>
                            <VBox spacing="4" prefWidth="300">
                                <Label text="Contact Number *" style="-fx-font-weight: bold; -fx-text-fill: #0A0A0A" />
                                <TextField fx:id="contactField" promptText="03XX-XXXXXXX" onKeyReleased="#validateContact"
                                           style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                                <Label fx:id="contactErrorLabel" text="" visible="false" managed="false"
                                       style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                            </VBox>
                        </HBox>

                        <!-- Row 3 -->
                        <HBox spacing="20">
                            <VBox spacing="4" prefWidth="300">
                                <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #0A0A0A" />
                                <PasswordField fx:id="passwordField" promptText="Minimum 8 characters" onKeyReleased="#validatePassword"
                                               style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                                <Label fx:id="passwordErrorLabel" text="" visible="false" managed="false"
                                       style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                            </VBox>
                            <VBox spacing="4" prefWidth="300">
                                <Label text="Confirm Password *" style="-fx-font-weight: bold; -fx-text-fill: #0A0A0A" />
                                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" onKeyReleased="#validatePasswordMatch"
                                               style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            </VBox>
                        </HBox>

                        <!-- Row 4 -->
                        <VBox spacing="4">
                            <Label text="Mission Statement *" style="-fx-font-weight: bold; -fx-text-fill: #0A0A0A" />
                            <TextArea fx:id="missionField" promptText="Between 100â€“500 words" prefHeight="150"
                                      style="-fx-background-color: white; -fx-border-color: #ccc;
                                             -fx-border-radius: 8; -fx-background-radius: 8;
                                             -fx-padding: 12; -fx-focus-color: transparent;
                                             -fx-faint-focus-color: transparent;" />
                            <Label fx:id="missionErrorLabel" text="" visible="false" managed="false"
                                   style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                            <Label fx:id="missionCharCountLabel" text="0/500"
                                   style="-fx-text-fill: #888; -fx-font-size: 12px;" />
                        </VBox>
                    </VBox>

                    <!-- Continue Button -->
                    <Button fx:id="continueButton" text="Save &amp; Continue" onAction="#handleContinue"
                            prefWidth="600"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10;
                                   -fx-font-weight: bold; -fx-font-size: 15px; -fx-padding: 10 0;" />

                    <!-- Login Prompt -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Already have an account?" style="-fx-text-fill: #0A0A0A" />
                        <Hyperlink text="Login here" onAction="#handleLoginRedirect"
                                   style="-fx-text-fill: #61A04D;" />
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
