<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:id="rootPane"
            fx:controller="com.example.philoxapp.dashboard.AdminDashboardController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #f7f9fc, #e6ebf5);">

    <!-- SIDEBAR -->
    <left>
        <VBox fx:id="sidebarContainer" alignment="TOP_LEFT" prefWidth="250" spacing="15"
              style="-fx-background-color: #FFFFFF; -fx-border-width: 0 1 0 0; -fx-border-color: #e0e0e0;">
            <!-- SidePanel will be added here dynamically -->
        </VBox>
    </left>

    <center>
        <!-- StackPane centers contentVBox horizontally -->
        <StackPane alignment="TOP_CENTER" style="-fx-padding:20 0 0 0;">
            <VBox fx:id="contentVBox" spacing="24" alignment="TOP_CENTER" maxWidth="Infinity" style="-fx-padding:24;">
                <!-- Top welcome rectangle -->
                <HBox maxWidth="Infinity">
                    <VBox spacing="14" prefWidth="1000" maxWidth="Infinity" alignment="TOP_LEFT"
                          style="-fx-background-color: linear-gradient(to bottom right, #EFF6FF 0%, #F0FDFA 50%, #F0FDF4 100%); -fx-background-radius:12; -fx-padding:22; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 10, 0.5, 0, 2);">

                        <Label text="Welcome back, Admin"
                               style="-fx-text-fill: #274C56; -fx-font-size: 22px; -fx-font-weight: 600;"/>
                        <Label text="Here's what's happening across the Philox platform today."
                               style="-fx-text-fill: #4A5565; -fx-font-size: 14px;"/>

                        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding:8 0 0 0;">
                            <Label text="âœ…" style="-fx-font-size:16px; -fx-text-fill: #00786F;"/>
                            <Label text="You're all set! Explore opportunities whenever you're ready."
                                   style="-fx-text-fill: #00786F; -fx-font-size:14px;"/>
                        </HBox>

                    </VBox>
                </HBox>

                <VBox spacing="18" maxWidth="Infinity"/>

                <!-- three cards row -->
                <HBox spacing="28" alignment="CENTER" style="-fx-padding:20 0 30 0;">
                    <!-- Card 1 -->
                    <VBox alignment="TOP_CENTER" spacing="18" prefWidth="320" prefHeight="260"
                          style="-fx-background-color: linear-gradient(to bottom right, #DBEAFE 0%, #EFF6FF 100%);
             -fx-background-radius:12; -fx-padding:48 28 28 28;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6, 0.5, 0, 2);">

                        <StackPane prefWidth="56" prefHeight="56">
                            <Pane maxWidth="56" prefHeight="56"
                                  style="-fx-background-color: rgba(190,219,255,0.5); -fx-background-radius:12;" />
                            <ImageView fx:id="adminD1Icon" fitWidth="28" fitHeight="28" preserveRatio="true"/>
                        </StackPane>

                        <Label text="Pending Organisation&#10;Approvals"
                               wrapText="true" textAlignment="CENTER" alignment="CENTER"
                               maxWidth="220"
                               style="-fx-text-fill:#1C398E; -fx-font-size:14px;"/>

                        <Label fx:id="pendingApprovalsLabel" text="8"
                               style="-fx-text-fill:#1C398E; -fx-font-size:28px;"/>
                    </VBox>

                    <!-- Card 2 -->
                    <VBox alignment="TOP_CENTER" spacing="18" prefWidth="320" prefHeight="260"
                          style="-fx-background-color: linear-gradient(to bottom right, #CBFBF1 0%, #F0FDFA 100%);
             -fx-background-radius:12; -fx-padding:48 28 28 28;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6, 0.5, 0, 2);">

                        <StackPane prefWidth="56" prefHeight="56">
                            <Pane maxWidth="56" prefHeight="56"
                                  style="-fx-background-color: rgba(150,247,228,0.5); -fx-background-radius:12;" />
                            <ImageView fx:id="adminD2Icon" fitWidth="32" fitHeight="32" preserveRatio="true"/>
                        </StackPane>

                        <Label text="Total Badges&#10;Created"
                               wrapText="true" textAlignment="CENTER" alignment="CENTER"
                               maxWidth="220"
                               style="-fx-text-fill:#0B4F4A; -fx-font-size:14px;"/>

                        <Label fx:id="totalBadgesLabel" text="5"
                               style="-fx-text-fill:#0B4F4A; -fx-font-size:28px;"/>
                    </VBox>

                    <!-- Card 3 -->
                    <VBox alignment="TOP_CENTER" spacing="18" prefWidth="320" prefHeight="260"
                          style="-fx-background-color: linear-gradient(to bottom right, #FEF3C6 0%, #FFFBEB 100%);
             -fx-background-radius:12; -fx-padding:48 28 28 28;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6, 0.5, 0, 2);">

                        <StackPane prefWidth="56" prefHeight="56">
                            <Pane maxWidth="56" prefHeight="56"
                                  style="-fx-background-color: rgba(254,230,133,0.5); -fx-background-radius:12;" />
                            <ImageView fx:id="adminD3Icon" fitWidth="28" fitHeight="28" preserveRatio="true"/>
                        </StackPane>

                        <Label text="Total Active&#10;Users"
                               wrapText="true" textAlignment="CENTER" alignment="CENTER"
                               maxWidth="220"
                               style="-fx-text-fill:#7B3306; -fx-font-size:14px;"/>

                        <Label fx:id="activeUsersLabel" text="1247"
                               style="-fx-text-fill:#7B3306; -fx-font-size:28px;"/>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="16" maxWidth="Infinity"
                      style="-fx-background-color: linear-gradient(to bottom right, #F1F5F9 0%, #EFF6FF 50%, #F0FDFA 100%); -fx-background-radius:12; -fx-padding:18 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 8, 0.5, 0, 2);">
                    <StackPane prefWidth="56" prefHeight="56" maxWidth="56" maxHeight="56">
                        <Pane prefWidth="56" prefHeight="56"
                              style="-fx-background-color: rgba(0,150,137,0.1); -fx-background-radius:12;" />
                        <ImageView fx:id="adminShieldIcon" fitWidth="28" fitHeight="28" preserveRatio="true"/>
                    </StackPane>

                    <VBox alignment="CENTER_LEFT" spacing="4">
                        <Label text="Thank you for helping keep Philox safe and impactful." wrapText="true"
                               maxWidth="900"
                               style="-fx-text-fill:#364153; -fx-font-size:15px; -fx-font-weight:600;"/>
                        <Label text="Your careful review ensures our community remains trusted and effective." wrapText="true"
                               maxWidth="900"
                               style="-fx-text-fill:#4A5565; -fx-font-size:13px;"/>
                    </VBox>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
