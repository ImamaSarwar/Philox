<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 0);"
      prefWidth="900" maxHeight="550" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.philoxapp.popUps.AdminOrgDetailsPopupController">

    <HBox alignment="CENTER_LEFT" style="-fx-padding: 15 20; -fx-border-color: #eee; -fx-border-width: 0 0 1 0;">
        <Label text="Organisation Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #111;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleClose" text="âœ•" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-cursor: hand; -fx-text-fill: #666;" />
    </HBox>

    <ScrollPane fitToWidth="true" style="-fx-background-color: white; -fx-background: white;">
        <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: white;">

            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="2">
                    <Label fx:id="nameLabel" text="Org Name" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #274C56;"/>
                    <Label fx:id="emailLabel" text="email@org.com" style="-fx-text-fill: #666; -fx-font-size: 13px;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" text="Pending" style="-fx-background-color: #FFFBEB; -fx-text-fill: #B45309; -fx-padding: 6 12; -fx-background-radius: 15; -fx-font-weight: bold; -fx-font-size: 11px;"/>
            </HBox>

            <Separator />

            <GridPane hgap="40" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="4">
                    <Label text="Mission Statement" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="missionLabel" text="..." wrapText="true" style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                </VBox>

                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="4">
                    <Label text="Address" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="addressLabel" text="..." wrapText="true" style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                </VBox>

                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="4">
                    <Label text="Website" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="websiteLabel" text="..." style="-fx-text-fill: #007bff; -fx-font-size: 13px;"/>
                </VBox>

                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="4">
                    <Label text="Submission Date" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="regDateLabel" text="..." style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                </VBox>
            </GridPane>

            <Separator />
            <Label text="Representative Info" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #274C56;"/>

            <GridPane hgap="40" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="4">
                    <Label text="Name" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="repNameLabel" text="..." style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                </VBox>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="4">
                    <Label text="CNIC" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="repCnicLabel" text="..." style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                </VBox>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="4">
                    <Label text="Contact" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="repContactLabel" text="..." style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                </VBox>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="4">
                    <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Label fx:id="repEmailLabel" text="..." style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                </VBox>
            </GridPane>

            <Separator />
            <Label text="Legal Documents" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #274C56;"/>

            <VBox spacing="10">
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #F9FAFB; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #eee; -fx-border-radius: 8;">
                    <Label text="Registration Certificate" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Button text="View Document" onAction="#viewReg" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-cursor: hand; -fx-padding: 5 12; -fx-font-size: 12px;"/>
                </HBox>
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #F9FAFB; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #eee; -fx-border-radius: 8;">
                    <Label text="Tax Document (NTN)" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Button text="View Document" onAction="#viewTax" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-cursor: hand; -fx-padding: 5 12; -fx-font-size: 12px;"/>
                </HBox>
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #F9FAFB; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #eee; -fx-border-radius: 8;">
                    <Label text="Representative CNIC" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 13px;"/>
                    <Button text="View Document" onAction="#viewCnic" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-cursor: hand; -fx-padding: 5 12; -fx-font-size: 12px;"/>
                </HBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <HBox fx:id="actionBox" spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 15 25; -fx-background-color: #FAFAFA; -fx-border-color: #eee; -fx-border-width: 1 0 0 0; -fx-background-radius: 0 0 12 12;">
        <Button fx:id="rejectButton" text="Reject Organisation" onAction="#handleReject"
                style="-fx-background-color: white; -fx-text-fill: #DC2626; -fx-border-color: #DC2626; -fx-border-radius: 8; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand;"/>
        <Button fx:id="approveButton" text="Approve Organisation" onAction="#handleApprove"
                style="-fx-background-color: #059669; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand;"/>
    </HBox>
</VBox>