<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="900.0" prefWidth="1400.0" style="-fx-background-color: #f7f9fc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.philoxapp.adminScreens.AdminOrganisationsController">

    <left>
        <VBox fx:id="sidebarContainer" alignment="TOP_LEFT" prefWidth="250" spacing="15" style="-fx-background-color: #FFFFFF; -fx-border-width: 0 1 0 0; -fx-border-color: #e0e0e0;">
        </VBox>
    </left>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets bottom="30" left="40" right="40" top="40" />
            </padding>

            <VBox spacing="20">
                <VBox spacing="5">
                    <Label style="-fx-font-size: 28px; -fx-text-fill: #1F2937;" text="Organisation Verification" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280;" text="Review and approve community organizations." />
                </VBox>

                <HBox alignment="CENTER_LEFT">
                    <HBox alignment="CENTER_LEFT" spacing="0" style="-fx-background-color: #E5E7EB; -fx-background-radius: 20; -fx-padding: 4;">
                        <Button fx:id="filterPending" onAction="#filterPending" style="-fx-background-color: #1F2937; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;" text="Pending (0)" />
                        <Button fx:id="filterApproved" onAction="#filterApproved" style="-fx-background-color: transparent; -fx-text-fill: #4B5563; -fx-background-radius: 20; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;" text="Approved (0)" />
                        <Button fx:id="filterRejected" onAction="#filterRejected" style="-fx-background-color: transparent; -fx-text-fill: #4B5563; -fx-background-radius: 20; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;" text="Rejected (0)" />
                        <Button fx:id="filterAll" onAction="#filterAll" style="-fx-background-color: transparent; -fx-text-fill: #4B5563; -fx-background-radius: 20; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;" text="All (0)" />
                    </HBox>
                </HBox>
            </VBox>

            <ScrollPane fx:id="mainScrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <TilePane fx:id="cardsContainer" hgap="20" prefColumns="2" vgap="20">
                    <padding>
                        <Insets bottom="10" left="5" right="5" top="10" />
                    </padding>
                </TilePane>
            </ScrollPane>

        </VBox>
    </center>
</BorderPane>