<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.philoxapp.component.card.OpportunityCard"
            prefWidth="300" prefHeight="320" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6,0,0,2); -fx-padding: 20;">
    <VBox spacing="12" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16" AnchorPane.topAnchor="12">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <VBox>
                <Label fx:id="orgLabel" style="-fx-font-weight: 600; -fx-font-size: 14px;"/>
                <Label fx:id="statusLabel" style="-fx-background-color: #e6f4ff; -fx-padding: 2 8; -fx-background-radius: 8; -fx-text-fill:#1570ef; -fx-font-size: 11px;"/>
            </VBox>
        </HBox>

        <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-padding: 0 0 4 0;"/>
        <Label fx:id="descriptionLabel" wrapText="true" style="-fx-text-fill: #6b7280; -fx-font-size: 13px;"/>

        <VBox spacing="8" style="-fx-padding: 6 0 0 0;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <ImageView fx:id="cardlocationIcon" fitWidth="18" fitHeight="18" preserveRatio="true"/>
                <Label fx:id="locationLabel" style="-fx-text-fill: #4A5565;" />
            </HBox>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="ðŸ“…" style="-fx-font-size: 14px; -fx-text-fill: #4A5565" />
                <Label fx:id="dateLabel" style="-fx-text-fill: #4A5565;"/>
            </HBox>
        </VBox>
    </VBox>

    <Button fx:id="detailsButton" text="View Details" AnchorPane.bottomAnchor="16" AnchorPane.leftAnchor="16" AnchorPane.rightAnchor="16"
            style="-fx-background-color: #04937a; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 18;" />
</AnchorPane>