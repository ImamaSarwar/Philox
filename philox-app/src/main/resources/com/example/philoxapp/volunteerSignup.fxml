<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.philoxapp.volunteerScreens.VolunteerSignupController"
            prefWidth="800" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #f7f9fc, #e6ebf5);">

    <!-- HEADER -->
    <top>
        <VBox>
            <!-- Header bar -->
            <HBox spacing="15" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-padding: 15 30; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
                <ImageView fx:id="logoImage" fitHeight="30" fitWidth="30" />
                <Label text="Philox" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #274C56;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="loginButton" text="Login" onAction="#handleLoginRedirect"
                        style="-fx-background-color: transparent;
                               -fx-border-color: #274C56;
                               -fx-text-fill: #274C56;
                               -fx-border-radius: 6;
                               -fx-font-weight: bold;
                               -fx-font-size: 14px;
                               -fx-padding: 8 24;" />
            </HBox>

            <!-- Back button row (just below header bar) -->
            <HBox alignment="TOP_LEFT" style="-fx-padding: 5 20 0 20;">
                <Button fx:id="backButton" onAction="#handleBackClick"
                        maxWidth="10" maxHeight="10"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="backImage" fitWidth="32" fitHeight="32" pickOnBounds="true" preserveRatio="true"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>


    <!-- MAIN CONTENT -->
    <center>
        <StackPane alignment="TOP_CENTER">
            <padding>
                <Insets top="0" right="0" bottom="30" left="0"/>
            </padding>
            <VBox spacing="20" alignment="TOP_CENTER" maxWidth="600"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0.3, 0, 4);">

                <!-- Title -->
                <Label text="Join as Volunteer"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #274C56;" />
                <Label text="Create an account to start making a difference"
                       style="-fx-font-size: 14px; -fx-text-fill: #666;" />

                <VBox spacing="16">

                    <!-- Row 1: Full Name + Email -->
                    <HBox spacing="20">
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Full Name *" style="-fx-font-weight: bold;" />
                            <TextField fx:id="nameField" promptText="Enter your full name"
                                       style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                        </VBox>
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Email *" style="-fx-font-weight: bold;" />
                            <TextField fx:id="emailField" promptText="your.email@example.com" onKeyReleased="#validateEmail"
                                       style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            <Label fx:id="emailErrorLabel" text="" visible="false" managed="false"
                                   style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                        </VBox>
                    </HBox>

                    <!-- Row 2: Phone + CNIC -->
                    <HBox spacing="20">
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Phone Number *" style="-fx-font-weight: bold;" />
                            <TextField fx:id="phoneField" promptText="03XX-XXXXXXX" onKeyReleased="#validatePhone"
                                       style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            <Label fx:id="phoneErrorLabel" text="" visible="false" managed="false"
                                   style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                        </VBox>
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="CNIC *" style="-fx-font-weight: bold;" />
                            <TextField fx:id="cnicField" promptText="12345-1234567-1" onKeyReleased="#validateCNIC"
                                       style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            <Label fx:id="cnicErrorLabel" text="" visible="false" managed="false"
                                   style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                        </VBox>
                    </HBox>

                    <!-- Row 3: Age + City -->
                    <HBox spacing="20">
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Age *" style="-fx-font-weight: bold;" />
                            <TextField fx:id="ageField" promptText="18" onKeyReleased="#validateAge"
                                       style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            <Label fx:id="ageErrorLabel" text="" visible="false" managed="false"
                                   style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                        </VBox>
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="City *" style="-fx-font-weight: bold;" />
                            <TextField fx:id="cityField" promptText="Karachi, Lahore, etc."
                                       style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                        </VBox>
                    </HBox>

                    <!-- Row 4: Password + Confirm Password -->
                    <HBox spacing="20">
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Password *" style="-fx-font-weight: bold;" />
                            <PasswordField fx:id="passwordField" promptText="Minimum 8 characters" onKeyReleased="#validatePassword"
                                           style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                            <Label fx:id="passwordErrorLabel" text="" visible="false" managed="false"
                                   style="-fx-text-fill: #E24560; -fx-font-size: 12px;" />
                        </VBox>
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <Label text="Confirm Password *" style="-fx-font-weight: bold;" />
                            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" onKeyReleased="#validatePasswordMatch"
                                           style="-fx-padding: 10 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ccc;" />
                        </VBox>
                    </HBox>

                </VBox>

                <!-- Terms Checkbox -->
                <HBox alignment="CENTER_LEFT">
                    <CheckBox fx:id="termsCheckbox" text="I agree to the terms and community guidelines"
                              style="-fx-font-size: 13px; -fx-text-fill: #444;" />
                </HBox>

                <!-- Create Account Button -->
                <Button fx:id="createAccountButton" text="Create Account" onAction="#handleSignup"
                        prefWidth="500"
                        style="-fx-background-color: #4CAF50;
               -fx-text-fill: white;
               -fx-background-radius: 10;
               -fx-font-weight: bold;
               -fx-font-size: 15px;
               -fx-padding: 10 0;" />

                <!-- Login Prompt -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" />
                    <Hyperlink text="Login here" onAction="#handleLoginRedirect"
                               style="-fx-text-fill: #61A04D;" />
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>